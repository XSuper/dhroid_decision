<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    >
    <ImageView 
        android:id="@+id/bottom_decision"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:background="@drawable/bottom_decision_1"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="10dip"
        />
    <RadioGroup 
        android:id="@+id/bottom_group"
        android:layout_marginTop="30dip"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton 
            android:id="@+id/bottom_me"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/bottom_me"
            android:button="@null"
            android:layout_marginRight="20dip"
            />
        <RadioButton 
            android:id="@+id/bottom_message"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:background="@drawable/bottom_message"
            android:button="@null"
            />
        
    </RadioGroup>

</LinearLayout>
